<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lighttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control Device"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:textColor="@color/blue"/>

    <!-- Light 1 Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/btn_on"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="ON light 1"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/btn_off"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="OFF light 1"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

    <!-- Light 2 Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_onlight1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="ON light 2"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/btn_offligth1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="OFF light 2"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

    <!-- Fan 1 Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_onfan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="ON Fan 1"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/btn_offfan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="OFF Fan 1"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

    <!-- Fan 2 Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_onfan1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="ON FAN 2"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/btn_offfan1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="OFF FAN 2"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

</LinearLayout>
